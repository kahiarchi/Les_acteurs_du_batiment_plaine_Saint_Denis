<script>
// Initialiser la carte centrÃ©e sur La Plaine Saint-Denis
const map = L.map('map').setView([48.922, 2.356], 14);

// Ajouter fond de carte OpenStreetMap
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
  attribution: 'Â© OpenStreetMap contributors'
}).addTo(map);

// Charger les donnÃ©es CSV
d3.csv("projets_carte.csv").then(data => {
  data.forEach(d => {
    // Ajouter un marqueur pour chaque projet
    const marker = L.marker([+d.Latitude, +d.Longitude]).addTo(map);
    marker.bindPopup(`<b>${d.Nom}</b><br>Statut: ${d.Statut}`);
  });
});
</script>

